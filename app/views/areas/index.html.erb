<%= link_to "Adicionar", new_area_path, class: "btn btn-default pull-right"%>
<h1>Áreas</h1>                    

<table class="table table-striped table-condensed"> <!-- table-condensed -->
    <thead>
        <tr>
            <th>ID</th>
            <th>Área</th>
            <th class="pull-right">Opções</th>
        </tr>
    </thead>
    <tbody>
        <% @areas.each do |area| %>
        <tr>
            <td><%= area.id %></td>
            <td><%= link_to area.area, area_path(area) %></td>
            <td class="pull-right">            
                <%= link_to " Editar", edit_area_path(area) %>
                 | 
                <%= link_to " Deletar", area, method: :delete, data: { confirm: "Tem certeza que deseja remover \"#{area.area}\"?" } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
