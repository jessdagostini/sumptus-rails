<%= form_for @outlay do |f| %>
	<% @outlay.errors.full_messages.each do |erro| %>
    	<div class="alert alert-danger" role="alert"><%= erro %></div>
	<% end %>

	<div class="form-group">
	    <%= f.label :area %>
	    <%= f.collection_select :area_id, @areas, :id, :area %>
	</div>

	<div class="form-group">
	    <%= f.label :payform %>
	    <%= f.collection_select :payform_id, @payforms, :id, :form %>
	</div>

	<div class="form-group">
	    <%= f.label :description %>
	    <%= f.text_area :description%>
	</div>

	<div class="form-group">
	    <%= f.label :Custo %>
	    <%= f.text_field :cost%>
	</div>
    	<%= f.submit "Gravar", class: "btn btn-primary" %>
	</div>
<% end %>