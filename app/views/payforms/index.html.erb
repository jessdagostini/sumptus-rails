<%= link_to "Adicionar", new_payform_path, class: "btn btn-default pull-right"%>
<h1>Formas de Pagamento</h1>		            
<table class="table table-striped table-condensed"> <!-- table-condensed -->
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th class="pull-right">Opções</th>
        </tr>
    </thead>
    <tbody>
        <% @payforms.each do |payform| %>
        <tr>
            <td><%= payform.id %></td>
            <td><%= link_to payform.form, payform_path(payform) %></td>
            <td class="pull-right">            
                <%= link_to " Editar", edit_payform_path(payform) %>
                 | 
                <%= link_to " Deletar", payform, method: :delete, data: { confirm: "Tem certeza que deseja remover \"#{payform.form}\"?" } %>
            </td>
          </div>
        </div>
    </td>
		</tr>
		<% end %>
	</tbody>
</table>
